{
  "description": "Switch languages with Right Option + 1, 2, 3",
  "manipulators": [
      {
          "from": {
              "key_code": "1",
              "modifiers": {
                  "mandatory": ["right_option"],
                  "optional": ["any"]
              }
          },
          "to_if_alone": [
            { 
              "select_input_source": { 
              "language": "en",
              "input_source_id": "com.apple.keylayout.US"
              }
            }
          ],
          "type": "basic"
      },
      {
          "from": {
              "key_code": "2",
              "modifiers": {
                  "mandatory": ["right_option"],
                  "optional": ["any"]
              }
          },
          "to_if_alone": [{ 
            "select_input_source": {
              "input_source_id": "com.apple.keylayout.Russian",
              "language": "ru"
              }
             }],
          "type": "basic"
      },
      {
          "from": {
              "key_code": "3",
              "modifiers": {
                  "mandatory": ["right_option"],
                  "optional": ["any"]
              }
          },
          "to_if_alone": [{ 
            "select_input_source":
            {
              "input_mode_id": "com.apple.inputmethod.SCIM.ITABC",
              "input_source_id": "com.apple.inputmethod.SCIM.ITABC",
              "language": "zh-Hans"
              }
             }],
          "type": "basic"
      }
  ]
}