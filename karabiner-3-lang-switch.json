{
  "description": "Switch languages with Left Option + 1, 2, 3",
  "manipulators": [
      {
          "from": {
              "key_code": "1",
              "modifiers": {
                  "mandatory": ["left_option"],
                  "optional": ["any"]
              }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "type": "basic"
      },
      {
          "from": {
              "key_code": "2",
              "modifiers": {
                  "mandatory": ["left_option"],
                  "optional": ["any"]
              }
          },
          "to": [
            {
              "select_input_source": {
                "language": "ru"
              }
            }
          ],
          "type": "basic"
      },
      {
          "from": {
              "key_code": "3",
              "modifiers": {
                  "mandatory": ["left_option"],
                  "optional": ["any"]
              }
          },
          "to": [
            {
              "select_input_source": {
                "language": "zh-Hans"
              }
            }
          ],
          "type": "basic"
      }
  ]
}